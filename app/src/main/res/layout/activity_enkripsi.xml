<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnkripsiActivity"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFile"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                app:srcCompat="@color/colorPrimary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/tv_imgWidth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Width : -"
                    android:layout_weight="5"/>

                <TextView
                    android:id="@+id/tv_imgHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Height : -"
                    android:layout_weight="5"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_inFile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Input File"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <Button
                    android:id="@+id/btn_genHill"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:enabled="false"
                    android:text="Generate Kunci Hill"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_margin="5dp"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="4">
                        <TextView
                            android:id="@+id/tv_HillKey11"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey12"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey13"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey14"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/tv_HillKey21"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal" />
                        <TextView
                            android:id="@+id/tv_HillKey22"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey23"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey24"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="4">
                        <TextView
                            android:id="@+id/tv_HillKey31"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey32"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey33"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey34"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="4">
                        <TextView
                            android:id="@+id/tv_HillKey41"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey42"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey43"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                        <TextView
                            android:id="@+id/tv_HillKey44"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:layout_weight="1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rtGenMat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Running Time : -"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <EditText
                    android:id="@+id/et_namaFileCipher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm_-~()012345789"
                    android:layout_weight="4"
                    android:hint="Nama Cipher File"
                    android:enabled="false"
                    android:maxLength="15"/>

                <Button
                    android:id="@+id/btn_encHill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:enabled="false"
                    android:text="Enkripsi Citra"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_rtEncImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Running Time : -"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="#000000"
                android:text="--------------------------------------------------------------------------" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <Button
                    android:id="@+id/btn_inPubKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:enabled="false"
                    android:text="Input Publik Key"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elgamal"
                        android:layout_weight="4"/>
                    <TextView
                        android:id="@+id/tv_PubKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Publik Key : "
                        android:layout_weight="4"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Parameter Kurva Eliptik" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="right"
                    android:text="prima = "/>
                <TextView
                    android:id="@+id/ec_penc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="right"
                    android:text="Koefisien a = "/>
                <TextView
                    android:id="@+id/ec_aenc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="right"
                    android:text="Koefisien b = "/>
                <TextView
                    android:id="@+id/ec_benc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="right"
                    android:text="Generator = "/>
                <TextView
                    android:id="@+id/ec_Genc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="right"
                    android:text="Order = "/>
                <TextView
                    android:id="@+id/ec_nenc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="-"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="right"
                    android:text="Cofactor = "/>
                <TextView
                    android:id="@+id/ec_henc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="-"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <EditText
                    android:id="@+id/et_randBil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_weight="4"
                    android:hint="Bilangan r ( 1 - (n-1) )"
                    android:enabled="false"
                    android:maxLength="5"/>

                <Button
                    android:id="@+id/btn_randBil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:enabled="false"
                    android:text="Random"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10">

                <EditText
                    android:id="@+id/et_namaKeyCipher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm_-~()012345789"
                    android:layout_weight="4"
                    android:hint="Nama Cipher Key"
                    android:enabled="false"
                    android:maxLength="15"/>

                <Button
                    android:id="@+id/btn_encKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:enabled="false"
                    android:text="Enkripsi Kunci"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_rtEncKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Running Time : -"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>